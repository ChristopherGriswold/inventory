<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.griswold.inventoryManagementSystem.menus.DeleteMenu">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="64.0" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="titleLabel" text="Confirm Delete">
               <font>
                  <Font name="Ubuntu Bold" size="26.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="16.0" left="16.0" top="16.0" />
         </padding>
      </HBox>
      <Pane style="-fx-border-color: #CCCCCC; -fx-border-style: solid; -fx-border-radius: 16; -fx-border-width: 1;" VBox.vgrow="NEVER">
         <children>
            <Label fx:id="textLabel" alignment="CENTER" contentDisplay="CENTER" text="Warning: This cannot be undone!" textAlignment="CENTER">
               <font>
                  <Font name="Ubuntu" size="18.0" />
               </font>
               <padding>
                  <Insets bottom="32.0" left="32.0" right="32.0" top="32.0" />
               </padding>
            </Label>
         </children>
         <VBox.margin>
            <Insets left="32.0" right="32.0" />
         </VBox.margin>
      </Pane>
      <HBox alignment="BOTTOM_CENTER" spacing="16.0" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteButtonListener" text="Delete" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonListener" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="16.0" top="16.0" />
         </padding>
      </HBox>
   </children>
</VBox>
